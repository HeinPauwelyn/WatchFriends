<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">

    <data>
        <import type="android.databinding.ObservableList" />
        <import type="nmct.jaspernielsmichielhein.watchfriends.model.Series" />

        <variable name="series" type="ObservableList&lt;Series&gt;" />

        <variable
            name="homeFragmentViewModel"
            type="nmct.jaspernielsmichielhein.watchfriends.viewmodel.HomeFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My watchlist"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="400px"
                    android:layout_gravity="top"
                    android:scrollbars="none">

                    <ListView
                        android:id="@+id/id_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="400px"
                        android:layout_gravity="center_vertical"
                        android:scrollbars="horizontal"
                        app:items="@{homeFragmentViewModel.getRecommerdByFriends()}" />
                </HorizontalScrollView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommerd by friends"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="400px"
                    android:layout_gravity="top"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/id_gallery1"
                        android:layout_width="wrap_content"
                        android:layout_height="400px"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="400px"
                    android:layout_gravity="top"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/id_gallery3"
                        android:layout_width="wrap_content"
                        android:layout_height="400px"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
